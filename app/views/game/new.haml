.container
	%h1 Start a New Game

	#new-game
		= form_for @game, url: game_index_path(@game) do |f|
			.form-group.stacked
				= f.label :name, "Give this game a unique name to remember it by:"
				= f.text_field :name, placeholder: "e.g., 'Hearts' or 'Monday Pitch game'"

			= f.submit

	%br

	%p= link_to "◀️ Back to games list", game_index_path
